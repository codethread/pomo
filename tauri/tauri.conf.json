{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run build:client",
    "beforeDevCommand": "pnpm run dev:client",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "pomo",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "scope": ["https://*.slack.com/api/*"],
        "all": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "codethread",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.pomo.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": ["https://releases.myapp.com/{{target}}/{{arch}}/{{current_version}}"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgwOTdBNTYxNjRGMDYwM0IKUldRN1lQQmtZYVdYZ0h1QVZXUlQwQjh3dWNNTE02akY4Ukdicys3Q1VhdUNRVWZOWGY0OXJnM3EK"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 300,
        "resizable": false,
        "title": "pomo",
        "width": 300,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "hiddenTitle": true,
        "minimizable": false,
        "titleBarStyle": "Overlay",
        "decorations": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  }
}
